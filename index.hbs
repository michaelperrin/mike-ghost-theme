{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The big featured header --}}
<header class="main-header {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        {{/if}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{@blog.title}}</h1>
            <h2 class="page-description">{{@blog.description}}</h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>

<aside class="social-links">
    <ul>
        <li class="twitter">
            <a href="https://twitter.com/michael_perrin" aria-label="Twitter"><i class="fa fa-twitter" aria-hidden="true"></i></a>
        </li>

        <li class="linkedin">
            <a href="http://fr.linkedin.com/in/perrinmichael/" aria-label="LinkedIn"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
        </li>

        <li class="github">
            <a href="https://github.com/michaelperrin" aria-label="Github"><i class="fa fa-github-alt" aria-hidden="true"></i></a>
        </li>
        
        <li class="stack-overflow">
            <a href="http://stackoverflow.com/users/1435519/micha%c3%abl-perrin" aria-label="StackOverflow"><i class="fa fa-stack-overflow" aria-hidden="true"></i></a>
        </li>
        
        <li class="facebook">
            <a href="https://www.facebook.com/perrin.michael" aria-label="Facebook"><i class="fa fa-facebook" aria-hidden="true"></i></a>
        </li>
        
        <li class="fivepx">
            <a href="https://500px.com/michaelperrin" aria-label="500px"><i class="fa fa-500px" aria-hidden="true"></i></a>
        </li>
    </ul>
</aside>

{{!-- The main content area on the homepage --}}
<main id="content" class="content" role="main">

    {{!-- The tag below includes the post loop - partials/loop.hbs --}}
    {{> "loop"}}

</main>
